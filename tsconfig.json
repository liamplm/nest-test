{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
        "@pipes/*": ["src/global/pipes/*"],
        "@dto/*": ["src/global/dto/*"],
        "@global/*": ["src/global/*"],
        "@user/*": ["src/user/*"],
        "@auth/*": ["src/auth/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
